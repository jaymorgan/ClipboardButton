package  {		import flash.desktop.Clipboard;	import flash.desktop.ClipboardFormats;	import flash.display.*;	import flash.events.Event;	import flash.events.MouseEvent;	import flash.text.TextField;
		public class CopyButton extends MovieClip {				public var fvars:String;		public var mr_copy_button:Mr_Copy_Button;		public var copyIcon:MovieClip;				public function CopyButton() {			this.loaderInfo.addEventListener(Event.COMPLETE, loaded);			mr_copy_button.buttonMode = true;			mr_copy_button.useHandCursor = true;			mr_copy_button.addEventListener(MouseEvent.CLICK, mrCopyButtonClick);			mr_copy_button.addEventListener(MouseEvent.MOUSE_OVER, copyButtonOver);			mr_copy_button.addEventListener(MouseEvent.MOUSE_OUT, copyButtonOut);			copyIcon.alpha = .6;					}		private function copyButtonOut(event:MouseEvent):void		{			copyIcon.alpha = .6;		}		private function copyButtonOver(event:MouseEvent):void		{			copyIcon.alpha = .99;		}		private function mrCopyButtonClick(event:Event):void		{			Clipboard.generalClipboard.clear();			Clipboard.generalClipboard.setData(ClipboardFormats.TEXT_FORMAT, fvars);		}		public function loaded(e){			fvars = this.loaderInfo.parameters.fvars;			if (!fvars){				fvars ="88";			}		}	}}